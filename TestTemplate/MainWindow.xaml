                                <Border Margin="-1 0 0 0" 
                                    BorderThickness="0,1,0,0" 
                                    BorderBrush="#F2F2F2">
                                    <Grid Margin="0 30 0 0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
