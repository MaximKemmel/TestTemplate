    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="15 10 15 10"
          Background="#F3F3F3">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="75"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0"
