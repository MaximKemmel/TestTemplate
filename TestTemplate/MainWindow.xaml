                                                           FontSize="14"
                                                           Foreground="White"
                                                           FontFamily="{StaticResource RobotoRegular}"
                                                           HorizontalAlignment="Center">
                                                            Aktive
                                                        </Label>
                                                    </materialDesign:Card>
                                                </Grid>
                                            </Grid>
                                        </Grid>
                                        <Grid Grid.Row="1"
                                          Margin="0 30 0 0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="75"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="75"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Label Grid.Column="0"
                                               FontSize="14" 
                                               FontFamily="{StaticResource RobotoRegular}"
                                               Foreground="#626262">
                                                Adresse
                                            </Label>
                                            <Grid Grid.Column="1"
                                              Margin="15 0 0 0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <Label Grid.Row="0"
                                                   FontSize="14" 
                                                   FontFamily="{StaticResource RobotoRegular}"
                                                   HorizontalAlignment="Left"
                                                   Foreground="Black">
                                                    Ziegelfeld
                                                </Label>
                                                <Label Grid.Row="1"
                                                   FontSize="14" 
                                                   FontFamily="{StaticResource RobotoRegular}"
                                                   HorizontalAlignment="Left"
                                                   Margin="0 5 0 0"
                                                   Foreground="Black">
                                                    2A
                                                </Label>
                                                <Label Grid.Row="2"
                                                   FontSize="14" 
                                                   FontFamily="{StaticResource RobotoRegular}"
                                                   HorizontalAlignment="Left"
                                                   Margin="0 5 0 0"
                                                   Foreground="Black">
                                                    4626 Niederbuchsietten
                                                </Label>
                                                <Label Grid.Row="3"
                                                   FontSize="14" 
                                                   FontFamily="{StaticResource RobotoRegular}"
                                                   HorizontalAlignment="Left"
                                                   Margin="0 5 0 0"
                                                   Foreground="Black">
                                                    Schweiz
                                                </Label>
                                            </Grid>
                                            <Grid Grid.Column="2">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="auto"/>
                                                    <RowDefinition Height="auto"/>
                                                </Grid.RowDefinitions>
                                                <Label Grid.Row="0"
                                                   FontSize="14" 
                                                   FontFamily="{StaticResource RobotoRegular}"
                                                   Foreground="#626262">
                                                    Suchname
                                                </Label>
                                                <Label Grid.Row="1"
                                                   FontSize="14" 
                                                   FontFamily="{StaticResource RobotoRegular}"
                                                   Foreground="#626262"
                                                   Margin="0 5 0 0">
                                                    Anrede
                                                </Label>
                                            </Grid>
                                            <Grid Grid.Column="3"
                                              Margin="30 0 0 0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="auto"/>
                                                    <RowDefinition Height="auto"/>
                                                </Grid.RowDefinitions>
