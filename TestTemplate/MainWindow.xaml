                                    BorderThickness="0,1,0,0" 
                                    BorderBrush="#F2F2F2">
                                    <Grid Margin="0 30 0 0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                    </Grid>
                                </Border>
                            </TabItem>
                        </TabControl>
                    </Border>
                </materialDesign:Card>
                <materialDesign:Card Grid.Column="1"
                                 Background="White"
                                 Margin="15 0 0 0"
                                 materialDesign:ElevationAssist.Elevation="Dp0"
                                 BorderBrush="{x:Null}"
                                 UniformCornerRadius="15">
                    <Border Padding="15 10 15 10">
                        <TabControl HorizontalContentAlignment="Left">
                            <TabItem Header="Kontakte"
                                 Height="40"
                                 Margin="0 0 15 0">
                                <Border Margin="-1 0 0 0" 
                                    BorderThickness="0,1,0,0" 
                                    BorderBrush="#F2F2F2">
                                    <Grid Margin="0 30 0 0" >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                        </Grid.RowDefinitions>
                                        <ListView Name="contactsList" Background="{x:Null}">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Padding="0 15 0 15"
                                                            BorderThickness="0 0 0 1"
                                                            BorderBrush="#BCBCBC">
                                                        <Grid Grid.Row="0" 
                                                              Width="500">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="auto" />
                                                                <ColumnDefinition Width="auto" />
                                                                <ColumnDefinition />
                                                                <ColumnDefinition Width="auto" />
                                                                <ColumnDefinition Width="auto" />
                                                            </Grid.ColumnDefinitions>
                                                            <materialDesign:Card Grid.Column="0"
                                                                                 BorderBrush="{x:Null}"
                                                                                 materialDesign:ElevationAssist.Elevation="Dp0"
                                                                                 UniformCornerRadius="0"
                                                                                 Background="#BCBCBC"
                                                                                 Height="50"
                                                                                 Width="50">
                                                                <materialDesign:PackIcon Kind="UserOutline"      
                                                                                         Foreground="White"
                                                                                         VerticalAlignment="Center"
                                                                                         HorizontalAlignment="Center"
                                                                                         Width="27"
                                                                                         Height="27"/>
                                                            </materialDesign:Card>
                                                            <Grid Grid.Column="1"
                                                                  Margin="20 0 0 0">
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition />
                                                                    <RowDefinition />
                                                                </Grid.RowDefinitions>
                                                                <TextBlock Grid.Row="0"
                                                                           FontSize="16" 
                                                                           FontFamily="{StaticResource RobotoMedium}"
                                                                           HorizontalAlignment="Left"
                                                                           Foreground="Black"
                                                                           VerticalAlignment="Center"
                                                                           Text="{Binding ContactName}"/>
                                                                <TextBlock Grid.Row="1"
                                                                           FontSize="14" 
                                                                           FontFamily="{StaticResource RobotoRegular}"
                                                                           HorizontalAlignment="Left"
                                                                           Foreground="Black"
                                                                           VerticalAlignment="Center"
                                                                           Text="{Binding ContactType}"/>
                                                            </Grid>
                                                            <Grid Grid.Column="3"
                                                                  Margin="20 0 0 0">
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition />
                                                                    <RowDefinition />
                                                                </Grid.RowDefinitions>
                                                                <TextBlock Grid.Row="0"
                                                                           FontSize="14" 
                                                                           FontFamily="{StaticResource RobotoRegular}"
                                                                           HorizontalAlignment="Right"
                                                                           Foreground="#5245E5"
                                                                           VerticalAlignment="Center"
                                                                           Text="{Binding Phone}"/>
                                                                <TextBlock Grid.Row="1"
                                                                           FontSize="14" 
                                                                           FontFamily="{StaticResource RobotoRegular}"
                                                                           HorizontalAlignment="Right"
                                                                           Foreground="#5245E5"
                                                                           VerticalAlignment="Center"
                                                                           Text="{Binding Email}"/>
                                                            </Grid>
                                                            <Button Grid.Column="4"
                                                                    Height="16"
                                                                    Width="16"
                                                                    Background="White"
                                                                    Cursor="Hand" 
                                                                    materialDesign:ElevationAssist.Elevation="Dp0"
                                                                    BorderBrush="{x:Null}"
                                                                    Padding="0">
                                                                <materialDesign:PackIcon Kind="MoreVert"      
                                                                                         Foreground="#D9D9D9"
                                                                                         VerticalAlignment="Center"
                                                                                         HorizontalAlignment="Left"
                                                                                         Width="16"
                                                                                         Height="16"/>
                                                            </Button>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                        <Button Grid.Row="1"
                                                Margin="0 10 0 0"
                                                Height="50"
                                                Width="200"
                                                HorizontalAlignment="Left"
                                                materialDesign:ElevationAssist.Elevation="Dp0"
                                                BorderBrush="{x:Null}">
                                            <Label FontSize="16" 
                                                   FontFamily="{StaticResource RobotoMedium}"
                                                   HorizontalAlignment="Right"
                                                   Foreground="White"
                                                   VerticalAlignment="Center">
                                                Kontakt hinzufügen
                                            </Label>
                                        </Button>
                                    </Grid>
                                </Border>
                            </TabItem>
                            <TabItem Header="Zusatzadressen"
                                 Height="40">
                                <Border Margin="-1 0 0 0" 
                                    BorderThickness="0,1,0,0" 
                                    BorderBrush="#F2F2F2">
                                    <Grid Margin="0 30 0 0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                    </Grid>
                                </Border>
                            </TabItem>
                        </TabControl>
                    </Border>
                </materialDesign:Card>
            </Grid>
            <Grid Grid.Row="3">
                <materialDesign:Card Background="White"
                                     materialDesign:ElevationAssist.Elevation="Dp0"
                                     BorderBrush="{x:Null}"
                                     UniformCornerRadius="15">
                    <Border Padding="15 10 15 10">
                        <TabControl HorizontalContentAlignment="Left">
                            <TabItem Header="Notizen"
                                 Height="40"
                                 Margin="0 0 15 0">
                                <Border Margin="-1 0 0 0"  
                                    BorderThickness="0,1,0,0" 
                                    BorderBrush="#F2F2F2">
                                    <TextBlock Margin="0 30 0 0"
                                           FontSize="16" 
                                           FontFamily="{StaticResource RobotoRegular}"
