                                                   FontSize="14" 
                                                   FontFamily="{StaticResource RobotoRegular}"
                                                   HorizontalAlignment="Left"
                                                   Foreground="Black">
                                                    admin admin
                                                </Label>
                                                <Label Grid.Row="1"
                                                   FontSize="14" 
                                                   FontFamily="{StaticResource RobotoRegular}"
                                                   HorizontalAlignment="Left"
                                                   Margin="0 5 0 0"
                                                   Foreground="Black">
                                                    Herr
                                                </Label>
                                            </Grid>
                                        </Grid>
                                        <Separator Grid.Row="2"
                                               Height="4"
                                               Width="Auto"
                                               HorizontalAlignment="Stretch"
                                               VerticalAlignment="Bottom"                   
                                               Background="#BCBCBC"
                                               Margin="0 20 0 20"/>
                                        <Grid Grid.Row="3"
                                          Margin="0 0 0 30">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="75"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="75"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid Grid.Column="0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="auto"/>
                                                    <RowDefinition Height="auto"/>
                                                </Grid.RowDefinitions>
                                                <Label Grid.Row="0"
                                                   FontSize="14" 
                                                   FontFamily="{StaticResource RobotoRegular}"
                                                   Foreground="#626262">
                                                    Telefon 1
                                                </Label>
                                                <Label Grid.Row="1"
                                                   FontSize="14" 
                                                   FontFamily="{StaticResource RobotoRegular}"
                                                   Foreground="#626262"
                                                   Margin="0 5 0 0">
                                                    Telefon 2
                                                </Label>
                                            </Grid>
                                            <Grid Grid.Column="1"
                                              Margin="15 0 0 0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <Label Grid.Row="0"
                                                   FontSize="14" 
                                                   FontFamily="{StaticResource RobotoRegular}"
                                                   HorizontalAlignment="Left"
                                                   Foreground="Black">
                                                    +41792511522
                                                </Label>
                                                <Label Grid.Row="1"
                                                   FontSize="14" 
                                                   FontFamily="{StaticResource RobotoRegular}"
                                                   HorizontalAlignment="Left"
                                                   Margin="0 5 0 0"
                                                   Foreground="Black">
                                                    +41792511522
                                                </Label>
                                            </Grid>
                                            <Grid Grid.Column="2">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="auto"/>
                                                    <RowDefinition Height="auto"/>
                                                </Grid.RowDefinitions>
                                                <Label Grid.Row="0"
                                                   FontSize="14" 
                                                   FontFamily="{StaticResource RobotoRegular}"
                                                   Foreground="#626262">
                                                    E-Mail
                                                </Label>
                                                <Label Grid.Row="1"
                                                   FontSize="14" 
                                                   FontFamily="{StaticResource RobotoRegular}"
                                                   Foreground="#626262"
                                                   Margin="0 5 0 0">
                                                    Webseite
                                                </Label>
                                            </Grid>
                                            <Grid Grid.Column="3"
                                              Margin="30 0 0 0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="auto"/>
                                                    <RowDefinition Height="auto"/>
                                                </Grid.RowDefinitions>
                                                <Label Grid.Row="0"
                                                   FontSize="14" 
                                                   FontFamily="{StaticResource RobotoRegular}"
                                                   HorizontalAlignment="Left"
                                                   Foreground="Black">
                                                    qwdeqa@gmail.com
                                                </Label>
                                                <Label Grid.Row="1"
                                                   FontSize="14" 
                                                   FontFamily="{StaticResource RobotoRegular}"
                                                   HorizontalAlignment="Left"
                                                   Margin="0 5 0 0"
                                                   Foreground="Black">
                                                    www.sdgsdgsd.com
                                                </Label>
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </TabItem>
                            <TabItem Header="Konditionen"
                                 Height="40"
                                 Margin="0 0 15 0">
                                <Border Margin="-1 0 0 0" 
                                    BorderThickness="0,1,0,0" 
                                    BorderBrush="#F2F2F2">
                                    <Grid Margin="0 30 0 0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                    </Grid>
                                </Border>
                            </TabItem>
                            <TabItem Header="Bankverbindungen" 
