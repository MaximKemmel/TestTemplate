                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Label VerticalAlignment="Center"
                   FontSize="24" 
                   FontFamily="{StaticResource RobotoMedium}"
                   Foreground="Black">
                    0129874 - Adolf Stanmayer
                </Label>
                <Button x:Name="btnEdit"
