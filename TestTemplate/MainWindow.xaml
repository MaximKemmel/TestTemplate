                    Margin="30 0 0 0"
                    Background="#F3F3F3"
                    Cursor="Hand" 
                    materialDesign:ElevationAssist.Elevation="Dp0"
                    BorderBrush="{x:Null}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Grid.Column="0"
                                             Kind="Pencil"      
                                             Foreground="#FF5245E5"
                                             VerticalAlignment="Center"/>
                        <Label Grid.Column="1"
                           Margin="5 0 0 0"
                           VerticalAlignment="Center"
                           FontSize="14" 
                           Foreground="#FF5245E5"
                           FontFamily="{StaticResource RobotoRegular}">
                            Bearbeiten
                        </Label>
                    </Grid>
                </Button>
                <Button x:Name="btnDelete"
                    Grid.Column="2"
                    Margin="20 0 0 0"
                    Background="#F3F3F3"
                    Cursor="Hand" 
                    materialDesign:ElevationAssist.Elevation="Dp0"
                    BorderBrush="{x:Null}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Grid.Column="0"
                                             Kind="DeleteOutline"      
                                             Foreground="#FF5245E5"
                                             VerticalAlignment="Center"/>
